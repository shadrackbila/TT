@model TimelyTastes.Models.LogInModel

<section class="bg-light min-h-screen flex items-center justify-center ">
    <div class="w-full max-w-md">
        <div class="bg-white rounded-xl shadow-2xl overflow-hidden">
            <!-- Header -->
            <div class="bg-primary p-6 text-center">
                <div class="flex justify-center mb-4">
                    <div class="bg-white p-3 rounded-full">
                        <i data-feather="lock" class="text-primary w-8 h-8"></i>
                    </div>
                </div>
                <h1 class="text-2xl font-bold text-white">Welcome Back</h1>
                <p class="text-white/90 mt-1">
                    @(ViewBag.ErrorMessage != null ? ViewBag.ErrorMessage : "Sign in to your account")
                </p>

            </div>

            <!-- Form -->
            <form class="p-6 space-y-6" asp-action="LogIn" method="post">
                <div class="space-y-4">
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-dark mb-1">Email Address</label>
                        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>

                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i data-feather="mail" class="text-dark/50"></i>
                            </div>
                            <input type="email" asp-for="Email"
                                class="w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition"
                                placeholder="your@email.com">
                        </div>
                    </div>
                    <div>
                        <label asp-for="Password" class="block text-sm font-medium text-dark mb-1">Password</label>
                        <span asp-validation-for="Password" class="text-red-600 text-sm"></span>

                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i data-feather="key" class="text-dark/50"></i>
                            </div>
                            <input type="password" asp-for="Password"
                                class="w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition"
                                placeholder="••••••••">
                        </div>
                    </div>
                </div>

                @* <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input id="remember-me" type="checkbox"
                            class="h-4 w-4 text-primary focus:ring-primary border-gray-300 rounded">
                        <label for="remember-me" class="ml-2 block text-sm text-dark">Remember me</label>
                    </div>
                    <a href="#" class="text-sm text-accent hover:text-accent/80 font-medium">Forgot password?</a>
                </div> *@

                <button type="submit"
                    class="w-full bg-primary hover:bg-primary/90 text-white font-bold py-3 px-4 rounded-lg transition flex items-center justify-center">
                    <span>Sign In</span>
                    <i data-feather="arrow-right" class="ml-2 w-5 h-5"></i>
                </button>
            </form>

            <!-- Footer -->
            <div class="bg-light px-6 py-4 text-center">
                <p class="text-dark/80 text-sm">
                    Don't have an account?
                    <a asp-action="Register" asp-controller="SignUp"
                        class="text-secondary font-medium hover:text-secondary/80">Sign up</a>
                </p>
            </div>
        </div>

        <div class="mt-6 text-center">
            <p class="text-dark/60 text-sm">© 2024 Timely-Tastes . All rights reserved.</p>
        </div>
    </div>

    <script>
        feather.replace();
    </script>
</section>