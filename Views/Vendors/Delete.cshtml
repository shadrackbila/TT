@model TimelyTastes.Models.Vendors

@{
    ViewData["Title"] = "Delete";
}


<div class="max-w-4xl mx-auto px-4 py-8">

    <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <!-- Header -->
        <div class="bg-red-400 p-6 text-white">
            <h1 class="text-2xl font-bold">Are you sure you want to delete this account?</h1>

            <div class="w-full  flex items-center justify-end gap-4 mt-6">
                <!-- Delete button -->
                <form asp-action="Delete">
                    <input type="hidden" asp-for="VendorID" />
                    <button type="submit"
                        class="px-5 py-2 bg-red-600 text-white font-semibold rounded-lg shadow hover:bg-red-700 transition">
                        Delete
                    </button>
                </form>

                <!-- Cancel button -->
                <a asp-action="Index" asp-controller="Listings"
                    class="px-5 py-2 bg-white text-red-600 font-semibold rounded-lg shadow hover:bg-gray-100 transition">
                    Cancel
                </a>
            </div>
        </div>


        <!-- Content -->
        <div class="p-6">
            <div class="flex flex-col md:flex-row gap-8">
                <!-- Logo Section -->
                <div class="md:w-1/3 flex flex-col items-center">
                    <div class="w-40 h-40 rounded-full bg-gray-100 border-4 border-white shadow-lg overflow-hidden">
                        <img src="@Url.Action("GetImage", "Vendors", new { id = Model.VendorID })" alt="Vendor Logo"
                            class="w-full h-full object-cover">
                    </div>
                    <div class="mt-4 text-center">
                        <h2 class="text-xl font-bold text-dark">@Model.Name</h2>
                        <div class="flex items-center justify-center mt-2">
                            <div class="flex text-yellow-400">
                                @for (int i = 0; i < 5; i++)
                                {
                                    <i data-feather="@(i < Model.Rating ? "star" : "star")"
                                        class="@(i < Model.Rating ? "fill-current" : "")"></i>
                                }
                            </div>
                            <span class="ml-2 text-gray-600">(@Model.TotalReviews reviews)</span>
                        </div>
                    </div>
                </div>

                <!-- Details Section -->
                <div class="md:w-2/3">
                    <div class="mb-6">
                        <h3 class="text-lg font-semibold text-dark border-b pb-2 mb-3">About</h3>
                        <p class="text-gray-600">@Model.Biography</p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Contact Info -->
                        <div>
                            <h3 class="text-lg font-semibold text-dark border-b pb-2 mb-3">Contact Information</h3>
                            <div class="space-y-2">
                                <div class="flex items-start">
                                    <i data-feather="user" class="mr-2 text-secondary mt-1"></i>
                                    <div>
                                        <p class="text-sm text-gray-500">Owner</p>
                                        <p class="font-medium">@Model.ShopOwnerName</p>
                                    </div>
                                </div>
                                <div class="flex items-start">
                                    <i data-feather="map-pin" class="mr-2 text-secondary mt-1"></i>
                                    <div>
                                        <p class="text-sm text-gray-500">Address</p>
                                        <p class="font-medium">@Model.Address</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Ratings -->
                        <div>
                            <h3 class="text-lg font-semibold text-dark border-b pb-2 mb-3">Ratings</h3>
                            <div class="space-y-3">
                                <div>
                                    <div class="flex justify-between mb-1">
                                        <span class="text-sm font-medium text-gray-600">Food Quality</span>
                                        <span class="text-sm font-medium text-gray-600">@Model.FoodQuality/5</span>
                                    </div>
                                    <div class="w-full bg-light rounded-full h-2">
                                        <div class="bg-secondary h-2 rounded-full"
                                            style="width: @(Model.FoodQuality * 20)%"></div>
                                    </div>
                                </div>
                                <div>
                                    <div class="flex justify-between mb-1">
                                        <span class="text-sm font-medium text-gray-600">Food Quantity</span>
                                        <span class="text-sm font-medium text-gray-600">@Model.FoodQuantity/5</span>
                                    </div>
                                    <div class="w-full bg-light rounded-full h-2">
                                        <div class="bg-secondary h-2 rounded-full"
                                            style="width: @(Model.FoodQuantity * 20)%"></div>
                                    </div>
                                </div>
                                <div>
                                    <div class="flex justify-between mb-1">
                                        <span class="text-sm font-medium text-gray-600">Food Variety</span>
                                        <span class="text-sm font-medium text-gray-600">@Model.FoodVariety/5</span>
                                    </div>
                                    <div class="w-full bg-light rounded-full h-2">
                                        <div class="bg-secondary h-2 rounded-full"
                                            style="width: @(Model.FoodVariety * 20)%"></div>
                                    </div>
                                </div>
                                <div>
                                    <div class="flex justify-between mb-1">
                                        <span class="text-sm font-medium text-gray-600">Collection Experience</span>
                                        <span
                                            class="text-sm font-medium text-gray-600">@Model.CollectionExperience/5</span>
                                    </div>
                                    <div class="w-full bg-light rounded-full h-2">
                                        <div class="bg-secondary h-2 rounded-full"
                                            style="width: @(Model.CollectionExperience * 20)%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Stats -->
                    <div class="mt-8 grid grid-cols-2 md:grid-cols-3 gap-4">
                        <div class="bg-light p-4 rounded-lg text-center">
                            <p class="text-sm text-gray-500">Saved Meals</p>
                            <p class="text-2xl font-bold text-primary">@Model.SavedMeals</p>
                        </div>
                        <div class="bg-light p-4 rounded-lg text-center">
                            <p class="text-sm text-gray-500">Total Reviews</p>
                            <p class="text-2xl font-bold text-primary">@Model.TotalReviews</p>
                        </div>
                        <div class="bg-light p-4 rounded-lg text-center">
                            <p class="text-sm text-gray-500">Overall Rating</p>
                            <p class="text-2xl font-bold text-primary">@Model.Rating.ToString("0.0")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>


<script>
    feather.replace()
</script>