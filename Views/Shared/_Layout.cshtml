<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TimelyTastes</title>
    <script type="importmap"></script>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TimelyTastes.styles.css" asp-append-version="true" />
    <link href="https://js.radar.com/v4.5.3/radar.css" rel="stylesheet">

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
    <script src="/js/getLocation.js"></script>


    @* /**
    * Radar JS SDK
    * https://docs.radar.com/reference/javascript
    **/ *@
    <script src="https://js.radar.com/v4.5.3/radar.min.js"></script>




    <style>

    </style>
</head>

<body>
    <header>
        <!-- Navigation -->
        <nav class="bg-white shadow-md">
            <div class="px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <a asp-action="Index" asp-controller="Browse" class="flex items-center">
                            <img class=" w-24" src="@Url.Content("~/images/logo.jpeg")" alt="LOGO">
                            <span class="ml-1 text-xl font-bold text-dark">Timely Tastes</span>
                        </a>
                    </div>
                    <div class="hidden md:flex items-center space-x-8">
                        @* <a href="/" class="text-dark hover:text-primary font-medium">Home</a> *@
                        <a asp-controller="Browse" asp-action="Index"
                            class="text-dark hover:text-primary font-medium">Home</a>

                        @* <a asp-controller="Browse" asp-action="Index"
                            class="text-dark hover:text-primary font-medium">Browse</a> *@
                        @* <a href="/businesses" class="text-dark hover:text-primary font-medium">Businesses</a> *@
                        <a asp-action="Index" asp-controller="Home"
                            class="text-dark hover:text-primary font-medium">About</a>
                        <a href="/contact" class="text-dark hover:text-primary font-medium">Contact</a>

                        @if (Context.Session.GetString("AccessToken") != null)
                        {
                            <a asp-action="Index" asp-controller="Listings"
                                class="text-dark hover:text-primary font-medium">View Listings</a>
                        }

                        <div class="flex items-center space-x-4">


                            @if (Context.Session.GetString("AccessToken") != null)
                            {
                                <!-- User IS logged in → show Sign Out -->
                                <div class="relative group inline-block">
                                    <!-- Trigger button -->
                                    <div
                                        class="flex items-center justify-center w-fit p-2 border border-black/70 rounded-full cursor-pointer">
                                        <i data-feather="user" class="text-dark w-6 h-6"></i>
                                    </div>



                                    <!-- Dropdown menu -->
                                    <ul
                                        class="absolute right-0 top-6 mt-2 hidden w-40 flex-col bg-white rounded-lg shadow-lg border border-black/10 group-hover:flex z-50">
                                        <li class="px-4 py-2 hover:bg-gray-100 cursor-pointer text-sm text-gray-700">
                                            <a asp-action="Index" asp-controller="Vendors">Analytics</a>

                                        </li>
                                        <li class="px-4 py-2 hover:bg-gray-100 cursor-pointer text-sm text-gray-700">

                                            <a asp-action="Edit" asp-controller="Vendors">Edit Account</a>
                                        </li>
                                        <li class="px-4 py-2 hover:bg-gray-100 cursor-pointer text-sm text-red-700">
                                            <a asp-action="Delete" asp-controller="Vendors">Delete Account</a>

                                        </li>
                                        <li class="px-4 py-2">
                                            <a asp-controller="LogIn" asp-action="Logout"
                                                class="block w-full text-center px-3 py-2 rounded-md bg-primary text-white text-sm font-medium hover:bg-green-600">
                                                Log Out
                                            </a>
                                        </li>
                                    </ul>
                                </div>


                            }
                            else
                            {
                                <!-- User NOT logged in → show Sign Up -->
                                <a asp-controller="LogIn" asp-action="LogIn"
                                    class="px-4 py-2 rounded-md text-dark font-medium hover:bg-gray-100">Log
                                    In</a>
                                <a asp-controller="SignUp" asp-action="Register"
                                    class="px-4 py-2 rounded-md bg-primary text-white font-medium hover:bg-green-600">Sign
                                    Up</a>
                            }

                        </div>
                    </div>
                    <div class="md:hidden flex items-center">
                        <button type="button" class="text-dark hover:text-primary focus:outline-none">
                            <i data-feather="menu"></i>
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="bg-light mt-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                <div>
                    <h3 class="text-lg font-semibold mb-4">Timely-Tastes</h3>
                    <p class="text-gray-400">Fighting food waste one meal at a time.</p>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Company</h3>
                    <ul class="space-y-2">
                        <li><a asp-action="Index" asp-controller="Home" class="text-gray-400 hover:text-white">About
                                Us</a></li>


                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Resources</h3>
                    <ul class="space-y-2">

                        <li><a href="/faq" class="text-gray-400 hover:text-white">FAQ</a></li>
                        <li><a href="/contact" class="text-gray-400 hover:text-white">Contact</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Connect</h3>
                    <div class="flex space-x-4">
                        <a href="#" class="text-gray-400 hover:text-white">
                            <i data-feather="facebook" class="w-5 h-5"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white">
                            <i data-feather="twitter" class="w-5 h-5"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white">
                            <i data-feather="instagram" class="w-5 h-5"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white">
                            <i data-feather="linkedin" class="w-5 h-5"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="border-t border-gray-800 mt-10 pt-6 flex flex-col md:flex-row justify-between items-center">
                <p class="text-gray-400 text-sm">© <span id="previousYear"></span> Timely-Tastes . All rights reserved.
                </p>
                <div class="flex space-x-6 mt-4 md:mt-0">
                    <a asp-action="Privacy" asp-controller="Home" class="text-gray-400 hover:text-white text-sm">Privacy
                        Policy</a>
                    <a asp-action="TermsOfService" asp-controller="Home"
                        class="text-gray-400 hover:text-white text-sm">Terms of Service</a>
                    <a href="/cookies" class="text-gray-400 hover:text-white text-sm">Cookie Policy</a>
                </div>
            </div>
        </div>
    </footer>
    <script>
        const currentYear = new Date().getFullYear();
        const lastYear = currentYear - 1;
        document.getElementById('previousYear').textContent = lastYear;
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        feather.replace();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>