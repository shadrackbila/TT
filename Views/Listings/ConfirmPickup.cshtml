@model string

<div class="min-h-screen flex items-center justify-center bg-light">
    <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-sm">
        <h1 class="text-2xl font-semibold text-primary mb-6 text-center">Confirm Pickup</h1>
        @if (ViewData["ErrorMessage"] != null)
        {
            <p class="text-red-500 mb-4 text-center">@ViewData["ErrorMessage"]</p>
        }
        <form asp-action="ConfirmPickup" method="post" class="space-y-4">
            <input type="hidden" name="OrderId" value="@Model" />

            <div>
                <label for="Pin" class="block text-sm font-medium mb-1">Enter Pickup PIN </label>
                <input type="text" name="Pin" id="Pin"
                    class="w-full border border-light rounded-lg px-3 py-2 focus:ring-2 focus:ring-primary focus:outline-none"
                    required />
            </div>

            <button type="submit"
                class="w-full bg-primary text-white font-medium px-4 py-2 rounded-lg hover:bg-green-600 transition">
                Confirm Pickup
            </button>
        </form>
    </div>
</div>